# Copy this file to .env.local and fill in your values

# OpenAI API Key (for AI features)
OPENAI_API_KEY=

# Opik API Key (for LLM observability and tracing)
OPIK_API_KEY=

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# Database connection string (optional, for other use)
DATABASE_URL=

# NextAuth.js - run: npx auth secret
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Demo user (optional, for development)
DEMO_USER_EMAIL=demo@bloomflow.com
DEMO_USER_PASSWORD_HASH=

# Admin - only this email can access /admin/insights
ADMIN_EMAIL=demo@bloomflow.com
